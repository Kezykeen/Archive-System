@model archivesystemWebUI.Models.DepartmentUsersViewModel
@{
    var count = 0;
}

<div class="content container-fluid">

    <!-- Page Header -->
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col">
                <h3 class="page-title">@Model.Department.Name</h3>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Department")">Faculty</a></li>
                    <li class="breadcrumb-item active">Users</li>
                </ul>
            </div>
        </div>
    </div>
    <!-- /Page Header -->

    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-bordered custom-table mb-0" id="users">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>ID</th>
                    <th>Email</th>
                    <th>Date Added</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.Users)
                {
                    <tr>
                        <td>
                            @{++count;}@count</td>
                        <td>
                            <h4 class="table-avatar">
                                <a href="@Url.Action("Details", "Users", new {id = item.Id})" style="text-decoration: none">
                                    <img alt="" src="/Content/assets/img/profiles/avatar-02.jpg" class="avatar"/><span>@item.Name</span>
                                </a>
                            </h4>
                        </td>
                        <td>@item.TagId</td>
                        <td>@item.Email</td>
                        <td>@item.CreatedAt</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $("#users").DataTable();
        });
    </script>
}


