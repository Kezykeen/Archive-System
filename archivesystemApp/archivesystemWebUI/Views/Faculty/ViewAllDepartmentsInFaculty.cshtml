@model archivesystemWebUI.Models.FacultyDepartmentsViewModel

@{
    var count = 0;
}

<div class="content container-fluid">

    <!-- Page Header -->
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col">
                <h3 class="page-title">@Model.Faculty.Name</h3>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Faculty")">Faculty</a></li>
                    <li class="breadcrumb-item active">Departments</li>
                </ul>
            </div>
        </div>
    </div>
    <!-- /Page Header -->

    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-bordered custom-table mb-0" id="departments">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Date Created</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Departments)
                    {
                    <tr>
                        <td>
                            @{++count;}
                            @count
                        </td>
                        <td>@item.Name</td>
                        <td>@item.CreatedAt</td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function() {
            $("#departments").DataTable();
        });
    </script>
}

