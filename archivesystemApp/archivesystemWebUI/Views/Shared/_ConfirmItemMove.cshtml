
@{
    Layout = null;
}

<div class="modal-header">
    <h5 class="modal-title" style="text-align:center">Do you want to move @ViewBag.ItemName into @ViewBag.CurrentFolder folder?</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div class="modal-body">
    <div style="margin:auto;display:flex;justify-content:center;flex-direction:column" id="delfolder-con">
        <div style="margin:auto;display:flex;justify-content:center">
            @using (Html.BeginForm("", "", FormMethod.Post, htmlAttributes: new { id = "confirmItemMove-form" }))
            {
                @Html.AntiForgeryToken()
                <input id="CMF-newparentFolderId" value="@ViewBag.newParentFolder" hidden/>
                <input class="btn btn-danger" type="submit" value="Yes" />

            }
            <button class="btn btn-primary" style="margin-left:0.5em" onclick="closeModal()"> No</button>
        </div>


    </div>
</div>
