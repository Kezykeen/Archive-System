

@using archivesystemWebUI.Models.RoleViewModels
@model AddOrEditRoleViewModel
@{
    Layout = null;
}

<div class="modal-header">
    <h5 class="modal-title" style="text-align:center">Do you want to delete @Model.Name role?</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div class="modal-body">
    <div style="margin:auto;display:flex;justify-content:center">
        @using (Html.BeginForm("Delete", "Roles", FormMethod.Post))
        {
            @Html.AntiForgeryToken();
            <input value="@Model.Id" type="text" hidden name="roleId" />
            <input class="btn btn-danger" type="submit" value="Yes" />

        }
        <button class="btn btn-primary" style="margin-left:0.5em" id="delFolder-no" onclick="closeModal()"> No</button>

    </div>
</div>


