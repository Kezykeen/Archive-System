@model archivesystemWebUI.Models.EditAccessLevelViewModel

<div class="modal-header">
    <h5 class="modal-title ">Edit Access Level</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div class="modal-body">
    @using (Ajax.BeginForm("EditAccessLevel", "AccessLevel", new AjaxOptions
    {
        OnSuccess = "OnEditAccessSuccess",
        OnFailure = "OnFailure",
        LoadingElementId = "saving",
        LoadingElementDuration = 2000


    }, new { id = "EditAccessLevelForm" }))
    {
        @Html.ValidationSummary(true, "", new { @class = "" })
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.CreatedAt)
        @Html.HiddenFor(model => model.UpdatedAt)

        <div class="form-group">
        @Html.LabelFor(model => model.Level, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-12">
        @Html.EditorFor(model => model.Level, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
        </div>
        </div>

        <div class="form-group">
        @Html.LabelFor(model => model.LevelDescription, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-12">
        @Html.EditorFor(model => model.LevelDescription, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.LevelDescription, "", new { @class = "text-danger" })
        </div>
        </div>

        <div class="submit-section">
            <div id="saving" class="fa-2x" style="color: gray; display: none">
                <i class="fa fa-cog fa-spin  fa-fw" aria-hidden="true"></i>
            </div>
            <button class="btn btn-primary submit-btn">Update</button>

        </div>
    }
</div>


