@model archivesystemWebUI.Models.CreateAccessLevelViewModel


<div class="modal-header">
    <h5 class="modal-title">Create Access Level</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div class="modal-body">
    @using (Ajax.BeginForm("CreateAccessLevel", "AccessLevel", new AjaxOptions
    {
        OnSuccess = "OnAddAccessSuccess",
        OnFailure = "OnFailure",
        LoadingElementId = "saving",
        LoadingElementDuration = 2000
        

    }, new { id = "CreateAccessLevelForm" }))
    {
        @Html.ValidationSummary(true, "", new { @class = "" })
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(model => model.Level, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.Level, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Level, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LevelDescription, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.LevelDescription, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LevelDescription, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="submit-section">
            <div id="saving" class="fa-2x" style="color: gray; display: none">
                <i class="fa fa-cog fa-spin  fa-fw" aria-hidden="true"></i>
            </div>
            <button class="btn btn-primary submit-btn">Create</button>

        </div>
    }
</div>
   
